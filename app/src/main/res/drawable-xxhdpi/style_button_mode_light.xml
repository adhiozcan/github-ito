<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#d5d5d5"/>
            <gradient android:angle="-90" android:endColor="#d3d4d5" android:startColor="#d3d4d5"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#d5d5d5"/>
            <solid android:color="#d3d4d5"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#d5d5d5"/>
            <gradient android:angle="-90" android:endColor="#e7e7e7" android:startColor="#f6f6f6"/>
        </shape>
    </item>
</selector>