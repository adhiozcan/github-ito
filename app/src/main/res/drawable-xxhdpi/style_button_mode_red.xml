<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <stroke android:width="1dip" android:color="#d5d5d5"/>
            <gradient android:angle="-90" android:endColor="#f2594e" android:startColor="#f2594e"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <stroke android:width="1dip" android:color="#d5d5d5"/>
            <solid android:color="#d3d4d5"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <stroke android:width="1dip" android:color="#30d5d5d5"/>
            <gradient android:angle="-90" android:endColor="#F44336" android:startColor="#f87066"/>
        </shape>
    </item>
</selector>