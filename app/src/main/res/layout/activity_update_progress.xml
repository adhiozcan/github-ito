<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/container_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorSnow"
              android:fillViewport="true"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Proses Tusbung"/>

    <View
        android:id="@+id/signal_condition"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_4dp"
        android:background="@color/material_pink"
        android:elevation="@dimen/space_2dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorSnow"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_meter"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_16dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Pelanggan"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16sp"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.2dip"
                        android:layout_marginBottom="@dimen/space_12dp"
                        android:layout_marginTop="@dimen/space_12dp"
                        android:background="@color/colorWhite"/>

                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Id Pelanggan"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/pelanggan_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:text="0000000000"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Nama"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/pelanggan_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:text="No Data"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Alamat"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/pelanggan_alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_16dp"
                            android:text="No Data"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/space_6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Tanggal TUL"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/tanggal_tul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="00-00-0000"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/space_6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="No. TUL"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/nomor_tul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No Data"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_14sp"/>
                    </TableRow>

                </TableLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_16dp"
                android:text="Foto Bukti Pemutusan"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_12dp"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/style_button_mode_light"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/foto_1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:adjustViewBounds="true"
                            android:onClick="takePicture"
                            android:scaleType="fitCenter"
                            android:src="@drawable/camera_b"
                            android:tag="default_image"/>

                        <TextView
                            android:id="@+id/hapus_foto_1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/style_button_mode_light"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="onBtnHapusClicked"
                            android:padding="5dp"
                            android:text="Hapus"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/style_button_mode_light"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/foto_2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:adjustViewBounds="true"
                            android:onClick="takePicture"
                            android:scaleType="fitCenter"
                            android:src="@drawable/camera_b"
                            android:tag="default_image"/>

                        <TextView
                            android:id="@+id/hapus_foto_2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/style_button_mode_light"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="onBtnHapusClicked"
                            android:padding="5dp"
                            android:text="Hapus"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/style_button_mode_light"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/foto_3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:adjustViewBounds="true"
                            android:onClick="takePicture"
                            android:scaleType="fitCenter"
                            android:src="@drawable/camera_b"
                            android:tag="default_image"/>

                        <TextView
                            android:id="@+id/hapus_foto_3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/style_button_mode_light"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="onBtnHapusClicked"
                            android:padding="5dp"
                            android:text="Hapus"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/style_button_mode_light"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/foto_4"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:adjustViewBounds="true"
                            android:onClick="takePicture"
                            android:scaleType="fitCenter"
                            android:src="@drawable/camera_b"
                            android:tag="default_image"/>

                        <TextView
                            android:id="@+id/hapus_foto_4"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/style_button_mode_light"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="onBtnHapusClicked"
                            android:padding="5dp"
                            android:text="Hapus"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:collapseColumns="*"
                android:paddingBottom="@dimen/space_16dp"
                android:paddingLeft="@dimen/space_16dp"
                android:paddingRight="@dimen/space_16dp"
                android:shrinkColumns="*">

                <TableRow android:layout_marginTop="@dimen/space_12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_8dp"
                        android:text="Tanggal"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/tanggal_putus"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:textColor="#000"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/space_8dp"
                        android:text="Status Pekerjaan"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/status_pekerjaan"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:entries="@array/jenis_pekerjaan"
                        android:spinnerMode="dropdown"
                        android:textSize="14sp"/>
                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/space_8dp"
                        android:text="Keterangan"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/keterangan"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:textSize="14sp"/>
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_8dp"
                        android:text="Status Meter"
                        android:textSize="13sp"
                        android:textStyle="bold"/>


                    <EditText
                        android:id="@+id/lwbp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Input No. LWBP"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textColor="#121212"
                        android:textSize="14sp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/layoutwbp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_8dp"
                        android:text=" "
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/wbp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Input No. WBP"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textColor="#121212"
                        android:textSize="14sp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/layoutkvarh"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_8dp"
                        android:text=""
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/kvarh"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Input No. KVARH"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:textColor="#121212"
                        android:textSize="14sp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/style_button_mode_teal"
            android:onClick="onProsesButtonClicked"
            android:paddingBottom="@dimen/space_12dp"
            android:paddingLeft="@dimen/space_16dp"
            android:paddingRight="@dimen/space_16dp"
            android:paddingTop="@dimen/space_12dp"
            android:text="Proses"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>