<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/space_12dp"
              android:paddingLeft="@dimen/space_16dp"
              android:paddingRight="@dimen/space_16dp"
              android:paddingTop="@dimen/space_12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VI | Sinkronisasi Data"
        android:textColor="@color/material_pink"
        android:textSize="@dimen/text_size_12sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/tanggal_riwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="160dp"
                android:text="17 April 2017"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/jam_riwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:13"
                android:textSize="@dimen/text_size_16sp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/log_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unduh data"
        android:textSize="@dimen/text_size_16sp"/>
</LinearLayout>