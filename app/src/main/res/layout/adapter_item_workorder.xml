<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/adapter_item_background"
    android:elevation="@dimen/space_4dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/sign"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="VI-1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/text_size_12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statuslunas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:text="LUNAS"
                android:textColor="@color/colorTealDark"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>


        <TextView
            android:id="@+id/pelanggan_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Id Pelanggan"
            android:textSize="@dimen/text_size_14sp"/>

        <TextView
            android:id="@+id/pelanggan_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Nama"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pelanggan_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"/>

    </LinearLayout>
</LinearLayout>